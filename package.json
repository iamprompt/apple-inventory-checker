{
  "name": "apple-inventory-checker",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@10.16.1",
  "scripts": {
    "dev": "dotenv -- tsx watch src/index.ts",
    "build": "tsup",
    "start": "node dist/index.js",
    "lint": "biome check --write",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit push",
    "docker:build": "docker buildx build -t iamprompt/apple-inventory-checker --push --platform linux/amd64 .",
    "docker:build:arm": "docker buildx build -t registry.iamprompt.me/apple-inventory-checker --platform linux/arm64 ."
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^24.5.2",
    "dotenv": "^17.2.2",
    "drizzle-kit": "^0.31.4",
    "tsup": "^8.5.0",
    "typescript": "^5.5.2",
    "wrangler": "^4.37.1"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.3",
    "@t3-oss/env-core": "^0.13.8",
    "better-sqlite3": "^12.2.0",
    "drizzle-orm": "^0.44.5",
    "hono": "^4.9.7",
    "ky": "^1.10.0",
    "node-cron": "^4.2.1",
    "object-deep-compare": "^2.0.0",
    "playwright": "^1.55.1",
    "tsx": "^4.20.5",
    "zod": "^4.1.9"
  }
}
